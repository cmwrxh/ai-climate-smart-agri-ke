{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PestObservation",
  "type": "object",
  "required": ["farm_id", "date", "pest_name", "severity"],
  "properties": {
    "farm_id": { "type": "string" },
    "date": { "type": "string", "format": "date" },
    "pest_name": { "type": "string", "description": "e.g., fall armyworm, aphids" },
    "severity": { "type": "string", "enum": ["low", "medium", "high"] },
    "crop_stage": { "type": "string", "description": "e.g., seedling, vegetative, flowering" },
    "notes": { "type": "string" }
  }
}
