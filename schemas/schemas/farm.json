{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Farm",
  "type": "object",
  "required": ["farm_id", "county", "crop_type"],
  "properties": {
    "farm_id": { "type": "string", "description": "Unique farm identifier" },
    "county": { "type": "string", "description": "County in Kenya" },
    "sub_county": { "type": "string" },
    "ward": { "type": "string" },
    "crop_type": { "type": "string", "description": "Primary crop (e.g., maize, beans)" },
    "farm_size_ha": { "type": "number", "minimum": 0 },
    "irrigation": { "type": "boolean" },
    "gps_lat": { "type": "number" },
    "gps_lon": { "type": "number" }
  }
}
